rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Legacy label images (pre user-scoping) â€” public read so old URLs work
    match /labels/{imageFile} {
      allow read: if true;
    }

    // Label images: public read (loaded via <img> tags), write requires auth
    match /users/{userId}/labels/{imageFile} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType == 'image/jpeg';
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    // Wine list pages: authenticated user, JPEG only, max 10MB
    match /users/{userId}/winelists/{sessionId}/{pageFile} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType == 'image/jpeg';
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    // Block everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
